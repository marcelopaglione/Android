<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.checkweatherrest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.checkweatherrest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.checkweatherrest.ActivityGETall"
            android:label="@string/title_activity_activity_getall" >
        </activity>
        <activity
            android:name="com.example.checkweatherrest.ActivityGETid"
            android:label="@string/title_activity_activity_getid" >
        </activity>
        <activity
            android:name="com.example.checkweatherrest.ActivityDELETE"
            android:label="@string/title_activity_activity_delete" >
        </activity>
        <activity
            android:name="com.example.checkweatherrest.ActivityPOST"
            android:label="@string/title_activity_activity_post" >
        </activity>
    </application>

</manifest>